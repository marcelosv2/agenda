@{
    crud1.Models.Evento Evento = (crud1.Models.Evento)ViewBag.Evento;
    List<crud1.Models.Usuario> userList = (List<crud1.Models.Usuario>)ViewBag.UserList;
    List<crud1.Models.Usuario> userNcList = (List<crud1.Models.Usuario>)ViewBag.UserNcList;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <style>
        tr:nth-child(odd) {
            background: #ddd;
        }

        tr:nth-child(even) {
            background: #eee;
        }

        table tr:hover td {
            background-color: #fff;
        }
    </style>
    <div>
        <h3>Detalhes do evento</h3>
        <table>
            <tr>
                <td>Id</td>
                <td>@Evento.Id</td>
            </tr>
            <tr>
                <td>Descrição</td>
                <td>@Evento.Descricao</td>
            </tr>
            <tr>
                <td>Data</td>
                <td>@Evento.Data</td>
            </tr>
            <tr>
                <td>Observação</td>
                <td>@Evento.Observacao</td>
            </tr>
        </table>

        <br/>
        <h3>Contatos convidados</h3>
        <table>
            <thead>
            <tr style="background-color:#6f7c86; height:40px;">
                <th>Id</th>
                <th>Nome</th>
                <th>Endereco</th>
                <th>Numero</th>
                <th>Cidade</th>
                <th>Telefone</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Nascimento</th>

                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (crud1.Models.Usuario item in userList)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Endereco</td>
                        <td>@item.Numero</td>
                        <td>@item.Cidade</td>
                        <td>@item.Telefone</td>
                        <td>@item.Celular</td>
                        <td>@item.Email</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <h3>Contatos não convidados</h3>
        <form action="/Agenda/Mail" method="POST">
            <input type="hidden" name="EventoId" value="@Evento.Id"/>
            <table>
                <thead>
                    <tr style="background-color:#6f7c86; height:40px;">
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Endereco</th>
                        <th>Numero</th>
                        <th>Cidade</th>
                        <th>Telefone</th>
                        <th>Celular</th>
                        <th>Email</th>
                        <th>Nascimento</th>
                        <th>Convidar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (crud1.Models.Usuario item in userNcList)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nome</td>
                            <td>@item.Endereco</td>
                            <td>@item.Numero</td>
                            <td>@item.Cidade</td>
                            <td>@item.Telefone</td>
                            <td>@item.Celular</td>
                            <td>@item.Email</td>
                            <td></td>
                            <td>
                                <input name="usuarioId" value="@item.Id" type="checkbox" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <input type="submit" value="Enviar">
        </form>
    </div>
</body>
</html>
