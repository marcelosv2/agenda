@model IEnumerable<crud1.Models.Usuario>
@{
    int rows = crud1.Util.Constants.N_ROWS;
    int max = ViewBag.Max;
    int nofpages = ViewBag.NOfPages;
    int page = ViewBag.Page;
    string nome = ViewBag.Nome;
}
        
<style>
    tr:nth-child(odd) {
        background: #ddd;
    }

    tr:nth-child(even) {
        background: #eee;
    }

    table tr:hover td {
        background-color: #fff;
    }
</style>
        <h3>Listar Contatos</h3>

        <form action="/Usuario/List" method="GET">
        <div>
            <input type="text"style="width:300px; height:25px"  name="nome" placeholder="Digite o nome. Use o % como coringa"/>
            <input type="submit" style="height:30px"  value="Buscar"/>
        </div>
        </form>
        <br/>
        <a href="/Usuario/Create"><img src="~/Content/img/add.png" height="20px"></a>
        <table>
            <thead>
                <tr style="background-color:#6f7c86; height:40px;color:white">
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Endereco</th>
                    <th>Numero</th>
                    <th>Cidade</th>
                    <th>Telefone</th>
                    <th>Celular</th>
                    <th>Email</th>
                    <th>Nascimento</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.Id)</td>
                        <td>@Html.DisplayFor(x => item.Nome)</td>
                        <td>@Html.DisplayFor(x => item.Endereco)</td>
                        <td>@Html.DisplayFor(x => item.Numero)</td>
                        <td>@Html.DisplayFor(x => item.Cidade)</td>
                        <td>@Html.DisplayFor(x => item.Telefone)</td>
                        <td>@Html.DisplayFor(x => item.Celular)</td>
                        <td>@Html.DisplayFor(x => item.Email)</td>
                        <td>@Html.DisplayFor(x => item.Nascimento)</td>
                        <td>
                            <a href="/Usuario/Show?id=@Html.DisplayFor(x => item.Id)"><img src="~/Content/img/show.png" height="20px"></a>
                            <a href="/Usuario/Edit?id=@Html.DisplayFor(x => item.Id)"><img src="~/Content/img/edit.png" height="20px"></a>
                            <a href="/Usuario/Delete/@Html.DisplayFor(x => item.Id)"><img src="~/Content/img/delete.png" height="20px"></a>
                        </td>
                    </tr>
                }
        </tbody>
        </table>
        <br/>
        paginas 
        @for (int i = 1; i <= nofpages; i++) {
            if (nome != null) { <a href="~/Usuario/List?nome=@nome&page=@i">@i</a>}
            if (nome == null) { <a href="~/Usuario/List?page=@i">@i</a>}
        }
        total: @max
    </div>
